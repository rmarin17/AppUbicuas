<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#fff">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:id="@+id/imagen"
                    android:layout_centerHorizontal="true"
                    android:background="#444444" />

                <ImageView
                    android:id="@+id/profile"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="#444444"
                    android:layout_margin="10dp"
                    android:layout_alignBottom="@id/imagen"
                    />

                <TextView
                    style="@style/Base.TextAppearance.AppCompat.Title"
                    android:id="@+id/nombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:padding="10dp"
                    tools:text="Dario Chamorro"
                    android:layout_toRightOf="@id/profile"
                    android:layout_alignTop="@id/profile"
                    />

                <TextView
                    style="@style/Base.TextAppearance.AppCompat.Title"
                    android:id="@+id/empresa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:padding="10dp"
                    tools:text="Empresa"
                    android:layout_toRightOf="@id/profile"
                    android:layout_below="@id/nombre"
                    />


                <TextView
                    style="@style/Base.TextAppearance.AppCompat.Body1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/hora"
                    android:text="Estudios"
                    android:textColor="@color/textBody"
                    android:layout_toRightOf="@+id/id_estudios"
                    android:layout_below="@+id/imagen"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"/>

                <ImageView
                    android:id="@+id/id_estudios"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_school"
                    android:paddingTop="10dp"
                    android:layout_alignLeft="@+id/id_lugar"
                    android:layout_alignStart="@+id/id_lugar"
                    android:layout_below="@+id/imagen"
                    android:paddingLeft="10dp"/>

                <TextView
                    style="@style/Base.TextAppearance.AppCompat.Title"
                    android:id="@+id/des"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/hora"
                    android:paddingLeft="15dp"
                    android:paddingTop="5dp"
                    android:textColor="@color/textTitle"
                    android:text="Experiencia"/>


                <TextView
                    style="@style/Base.TextAppearance.AppCompat.Body1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/experiencia"
                    android:text="Descripcion"
                    android:layout_below="@+id/des"
                    android:paddingLeft="15dp"
                    android:textColor="@color/textBody"

                    />

                <TextView
                    style="@style/Base.TextAppearance.AppCompat.Title"
                    android:id="@+id/pon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/experiencia"
                    android:paddingLeft="15dp"
                    android:paddingTop="7dp"
                    android:textColor="@color/textTitle"
                    android:text="FormaciÃ³n Internacional"/>

                <TextView
                    style="@style/Base.TextAppearance.AppCompat.Body1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/formacion"
                    android:text="Formacion"
                    android:textColor="@color/textBody"
                    android:layout_below="@+id/pon"
                    android:paddingLeft="15dp"
                    />

                <TextView
                    style="@style/Base.TextAppearance.AppCompat.Title"
                    android:id="@+id/hab"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/formacion"
                    android:paddingLeft="15dp"
                    android:paddingTop="7dp"
                    android:textColor="@color/textTitle"
                    android:text="Habilidades"/>

                <TextView
                    style="@style/Base.TextAppearance.AppCompat.Body1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/habilidad"
                    android:text="Habilidad"
                    android:textColor="@color/textBody"
                    android:layout_below="@id/hab"
                    android:paddingLeft="15dp"
                    />

            </RelativeLayout>

        </android.support.v7.widget.CardView>
    </FrameLayout>
</RelativeLayout>